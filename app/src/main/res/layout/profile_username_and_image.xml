<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/violet_concave"
    android:paddingBottom="25dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/profile"
        android:layout_marginTop="@dimen/margin_16dp"/>

    <ImageView
        android:id="@+id/iv_editable_image_hint"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/drawable_editable_image_hint"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_image" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        app:fontFamily="@font/airbnb_cereal_light"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_image"
        app:layout_constraintStart_toStartOf="@+id/iv_user_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_user_image" />

    <Button
        android:id="@+id/btn_profile_bottom_sheet_action"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/violet_round"
        android:gravity="center_horizontal"
        android:text="@string/edit_profile"
        android:textColor="@color/white"
        android:padding="@dimen/layout_padding_10dp"
        android:fontFamily="@font/airbnb_cereal_black"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_user_name"
        app:layout_constraintStart_toStartOf="@+id/tv_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />


</androidx.constraintlayout.widget.ConstraintLayout>