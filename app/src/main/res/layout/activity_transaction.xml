<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_new" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layout_padding_50dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MSISDN"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_padding_20dp"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/MSISDNtext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/msisdn"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_below="@+id/MSISDN"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_padding_20dp"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/amounttext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/amount"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/send"
            style="?android:buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Send Money"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>