<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/layout_padding_30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_padding_8dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding_8dp">

            <RelativeLayout
                android:id="@+id/text_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_padding_4dp"
                    android:text="Direct Payement"></TextView>

                <ImageView
                    android:id="@+id/bt_payment"
                    android:layout_width="@dimen/layout_padding_20dp"
                    android:layout_height="@dimen/layout_padding_20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_padding_10dp"
                    android:background="@drawable/circle_arrow"
                    android:padding="@dimen/layout_padding_4dp"
                    android:scaleType="centerCrop"></ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/text_hover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_payment">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_padding_4dp"
                    android:text="MTN Uganda USSD Payment"></TextView>

                <ImageView
                    android:id="@+id/bt_hover"
                    android:layout_width="@dimen/layout_padding_20dp"
                    android:layout_height="@dimen/layout_padding_20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_padding_50dp"
                    android:background="@drawable/circle_arrow"
                    android:padding="@dimen/layout_padding_4dp"
                    android:scaleType="centerCrop"></ImageView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>