<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/layout_padding_30dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/layout_padding_8dp"
    android:layout_height="wrap_content"
    android:background="@color/white">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding_8dp"
    ><RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text_beneficiary">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding_4dp"
        android:text="Beneficiaries"></TextView>
    <ImageView
        android:id="@+id/bt_beneficiary"
        android:layout_width="@dimen/layout_padding_20dp"
        android:layout_height="@dimen/layout_padding_20dp"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/layout_padding_4dp"
        android:layout_marginLeft="@dimen/layout_padding_10dp"
        android:background="@drawable/circle_arrow"></ImageView>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_setting"
        android:layout_below="@+id/text_beneficiary">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding_4dp"
        android:text="Settings"
        ></TextView>
    <ImageView
        android:id="@+id/bt_setting"
        android:layout_width="@dimen/layout_padding_20dp"
        android:layout_height="@dimen/layout_padding_20dp"
        android:padding="@dimen/layout_padding_4dp"
        android:layout_marginLeft="@dimen/layout_padding_50dp"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_arrow"></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_about"
        android:layout_below="@+id/text_setting"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding_4dp"
        android:text="About us"></TextView>
    <ImageView
        android:id="@+id/bt_about"
        android:layout_width="@dimen/layout_padding_20dp"
        android:layout_height="@dimen/layout_padding_20dp"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/circle_arrow"></ImageView></RelativeLayout>
</RelativeLayout>
</LinearLayout></com.google.android.material.card.MaterialCardView>